<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABB_ACCMEX.Presentacion.Login"
             BackgroundColor="Black">
             
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

            <Image Source="Logotipo.png" WidthRequest="180" HeightRequest="180"></Image>
            
            <Entry x:Name="ID" Placeholder="UserName" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Entry x:Name="Contrasena" Placeholder="Password"  IsPassword="True" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Button 
                VerticalOptions="Center"
                Text="Login"
                TextColor="White"
                BackgroundColor="Transparent"
                BorderColor="ForestGreen"
                BorderWidth="1.5"
                CornerRadius="50"
                Clicked="Button_Clicked"
                ></Button>
            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                    </FormattedString>
                </Label.FormattedText>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>